<?xml version="1.0" ?>
<MixxxKeyboardPreset mixxxVersion="2.0.1+" schemaVersion="1">
  <info>
    <name>Default Mapping</name>
    <author>Mixxx</author>
    <description>Default mapping for Mixxx.</description>
  </info>
  <controller>
    <group name="[AutoDJ]">
      <control action="enabled">
        <keyseq lang="en_US" scancode="universal_key">Shift+F12</keyseq>
      </control>
      <control action="fade_now">
        <keyseq lang="en_US" scancode="universal_key">Shift+F11</keyseq>
      </control>
      <control action="shuffle_playlist">
        <keyseq lang="en_US" scancode="universal_key">Shift+F9</keyseq>
      </control>
      <control action="skip_next">
        <keyseq lang="en_US" scancode="universal_key">Shift+F10</keyseq>
      </control>
    </group>
    <group name="[Channel1]">
      <control action="LoadSelectedTrack">
        <keyseq lang="en_US" scancode="universal_key">Shift+Left</keyseq>
      </control>
      <control action="back">
        <keyseq lang="en_US" scancode="30">a</keyseq>
      </control>
      <control action="beatloop_4_toggle">
        <keyseq lang="en_US" scancode="16">q</keyseq>
      </control>
      <control action="beatsync">
        <keyseq lang="en_US" scancode="2">1</keyseq>
      </control>
      <control action="bpm_tap">
        <keyseq lang="en_US" scancode="2">Shift+!</keyseq>
      </control>
      <control action="cue_default">
        <keyseq lang="en_US" scancode="33">f</keyseq>
      </control>
      <control action="cue_gotoandstop">
        <keyseq lang="en_US" scancode="33">Shift+f</keyseq>
      </control>
      <control action="cue_set">
        <keyseq lang="en_US" scancode="32">Shift+d</keyseq>
      </control>
      <control action="eject">
        <keyseq lang="en_US" scancode="universal_key">Alt+Shift+Left</keyseq>
      </control>
      <control action="filterLowKill">
        <keyseq lang="en_US" scancode="48">b</keyseq>
      </control>
      <control action="flanger">
        <keyseq lang="en_US" scancode="6">5</keyseq>
      </control>
      <control action="fwd">
        <!-- TODO(XXX) The greek alphabet has three characters for the letter Sigma:
                       upper-case, lower-case and lower-case at the end of a word. The
                       'normal' lower- and upper-case characters are bound to the S
                       key on a US layout, and the upper-case is bound to the W key.
                       The problem with this us that both the key W and S are the same
                       to Qt. So, if we map 'fwd' to S and 'loop_halve' to W, both
                       keys will trigger both actions. Therefore, we can't use key S
                       nor W. This issue will have to be looked on though when changing
                       to Qt 5. -->
        <keyseq lang="en_US" scancode="31">s</keyseq>
      </control>
      <control action="hotcue_1_activate">
        <keyseq lang="en_US" scancode="12">z</keyseq>
      </control>
      <control action="hotcue_1_clear">
        <keyseq lang="en_US" scancode="12">Shift+z</keyseq>
      </control>
      <control action="hotcue_2_activate">
        <keyseq lang="en_US" scancode="45">x</keyseq>
      </control>
      <control action="hotcue_2_clear">
        <keyseq lang="en_US" scancode="45">Shift+x</keyseq>
      </control>
      <control action="hotcue_3_activate">
        <keyseq lang="en_US" scancode="46">c</keyseq>
      </control>
      <control action="hotcue_3_clear">
        <keyseq lang="en_US" scancode="46">Shift+c</keyseq>
      </control>
      <control action="hotcue_4_activate">
        <keyseq lang="en_US" scancode="47">v</keyseq>
      </control>
      <control action="hotcue_4_clear">
        <keyseq lang="en_US" scancode="47">Shift+v</keyseq>
      </control>
      <control action="loop_double">
        <keyseq lang="en_US" scancode="18">e</keyseq>
      </control>
      <control action="loop_halve">
        <!-- TODO(XXX) Overload W for Greek keyboard layout. See other
        TODO at control for action "fwd" at group "[Channel1]" -->
        <keyseq lang="en_US" scancode="17">w</keyseq>
      </control>
      <control action="loop_in">
        <keyseq lang="en_US" scancode="3">2</keyseq>
      </control>
      <control action="loop_out">
        <keyseq lang="en_US" scancode="4">3</keyseq>
      </control>
      <control action="passthrough">
        <keyseq lang="en_US" scancode="36">Ctrl+j</keyseq>
      </control>
      <control action="pfl">
        <keyseq lang="en_US" scancode="20">t</keyseq>
      </control>
      <control action="play">
        <keyseq lang="en_US" scancode="32">d</keyseq>
      </control>
      <control action="rate_perm_down">
        <keyseq lang="en_US" scancode="universal_key">F1</keyseq>
      </control>
      <control action="rate_perm_down_small">
        <keyseq lang="en_US" scancode="universal_key">Shift+F1</keyseq>
      </control>
      <control action="rate_perm_up">
        <keyseq lang="en_US" scancode="universal_key">F2</keyseq>
      </control>
      <control action="rate_perm_up_small">
        <keyseq lang="en_US" scancode="universal_key">Shift+F2</keyseq>
      </control>
      <control action="rate_temp_down">
        <keyseq lang="en_US" scancode="universal_key">F3</keyseq>
      </control>
      <control action="rate_temp_down_small">
        <keyseq lang="en_US" scancode="universal_key">Shift+F3</keyseq>
      </control>
      <control action="rate_temp_up">
        <keyseq lang="en_US" scancode="universal_key">F4</keyseq>
      </control>
      <control action="rate_temp_up_small">
        <keyseq lang="en_US" scancode="universal_key">Shift+F4</keyseq>
      </control>
      <control action="reloop_exit">
        <keyseq lang="en_US" scancode="5">4</keyseq>
      </control>
      <control action="reverse">
        <keyseq lang="en_US" scancode="30">Shift+a</keyseq>
      </control>
      <control action="vinylcontrol_cueing">
        <keyseq lang="en_US" scancode="21">Ctrl+Alt+Y</keyseq>
      </control>
      <control action="vinylcontrol_mode">
        <keyseq lang="en_US" scancode="21">Ctrl+Shift+Y</keyseq>
      </control>
    </group>
    <group name="[Channel2]">
      <control action="LoadSelectedTrack">
        <keyseq lang="en_US" scancode="universal_key">Shift+Right</keyseq>
      </control>
      <control action="back">
        <keyseq lang="en_US" scancode="36">j</keyseq>
      </control>
      <control action="beatloop_4_toggle">
        <keyseq lang="en_US" scancode="22">u</keyseq>
      </control>
      <control action="beatsync">
        <keyseq lang="en_US" scancode="7">6</keyseq>
        <keyseq lang="fr_FR" scancode="TODO: No scancode found in fr_FR for character: '§'">§</keyseq>
      </control>
      <control action="bpm_tap">
        <keyseq lang="en_US" scancode="7">Shift+^</keyseq>
        <keyseq lang="es_ES" scancode="8">Shift+/</keyseq>
        <keyseq lang="ru_RU" scancode="53">Shift+,</keyseq>
      </control>
      <control action="cue_default">
        <keyseq lang="en_US" scancode="39">;</keyseq>
        <keyseq lang="el_GR" scancode="TODO: No scancode found in el_GR for character: '´'">´</keyseq>
      </control>
      <control action="cue_gotoandstop">
        <keyseq lang="en_US" scancode="39">Shift+:</keyseq>
        <keyseq lang="el_GR" scancode="40">Shift+&quot;</keyseq>
      </control>
      <control action="cue_set">
        <keyseq lang="en_US" scancode="38">Shift+l</keyseq>
        <keyseq lang="da_DK" scancode="2">Shift+!</keyseq>
      </control>
      <control action="eject">
        <keyseq lang="en_US" scancode="universal_key">Alt+Shift+Right</keyseq>
      </control>
      <control action="filterLowKill">
        <keyseq lang="en_US" scancode="49">n</keyseq>
      </control>
      <control action="flanger">
        <keyseq lang="en_US" scancode="11">0</keyseq>
        <keyseq lang="cs_CZ" scancode="TODO: No scancode found in cs_CZ for character: '0'">0</keyseq>
      </control>
      <control action="fwd">
        <keyseq lang="en_US" scancode="37">k</keyseq>
      </control>
      <control action="hotcue_1_activate">
        <keyseq lang="en_US" scancode="50">m</keyseq>
      </control>
      <control action="hotcue_1_clear">
        <keyseq lang="en_US" scancode="50">Shift+M</keyseq>
      </control>
      <control action="hotcue_2_activate">
        <keyseq lang="en_US" scancode="51">,</keyseq>
      </control>
      <control action="hotcue_2_clear">
        <keyseq lang="en_US" scancode="51">Shift+&lt;</keyseq>
        <keyseq lang="es_ES" scancode="13">Shift+¿</keyseq>
      </control>
      <control action="hotcue_3_activate">
        <keyseq lang="en_US" scancode="52">.</keyseq>
      </control>
      <control action="hotcue_3_clear">
        <keyseq lang="en_US" scancode="52">Shift+&gt;</keyseq>
        <keyseq lang="es_ES" scancode="TODO: No scancode found in es_ES for character: '?'">Shift+?</keyseq>
      </control>
      <control action="hotcue_4_activate">
        <keyseq lang="en_US" scancode="53">/</keyseq>
        <keyseq lang="es_ES" scancode="43">ç</keyseq>
        <keyseq lang="fr_FR" scancode="13">=</keyseq>
        <keyseq lang="ru_RU" scancode="94">/</keyseq>
      </control>
      <control action="hotcue_4_clear">
        <keyseq lang="en_US" scancode="53">Shift+?</keyseq>
        <keyseq lang="es_ES" scancode="43">Shift+Ç</keyseq>
        <keyseq lang="fr_FR" scancode="13">Shift++</keyseq>
        <keyseq lang="ru_RU" scancode="8">Shift+?</keyseq>
      </control>
      <control action="loop_double">
        <keyseq lang="en_US" scancode="24">o</keyseq>
      </control>
      <control action="loop_halve">
        <keyseq lang="en_US" scancode="23">i</keyseq>
      </control>
      <control action="loop_in">
        <keyseq lang="en_US" scancode="8">7</keyseq>
      </control>
      <control action="loop_out">
        <keyseq lang="en_US" scancode="9">8</keyseq>
        <keyseq lang="fr_FR" scancode="53">!</keyseq>
      </control>
      <control action="passthrough">
        <keyseq lang="en_US" scancode="37">Ctrl+k</keyseq>
      </control>
      <control action="pfl">
        <keyseq lang="en_US" scancode="21">y</keyseq>
      </control>
      <control action="play">
        <keyseq lang="en_US" scancode="38">l</keyseq>
      </control>
      <control action="rate_perm_down">
        <keyseq lang="en_US" scancode="universal_key">F5</keyseq>
      </control>
      <control action="rate_perm_down_small">
        <keyseq lang="en_US" scancode="universal_key">Shift+F5</keyseq>
      </control>
      <control action="rate_perm_up">
        <keyseq lang="en_US" scancode="universal_key">F6</keyseq>
      </control>
      <control action="rate_perm_up_small">
        <keyseq lang="en_US" scancode="universal_key">Shift+F6</keyseq>
      </control>
      <control action="rate_temp_down">
        <keyseq lang="en_US" scancode="universal_key">F7</keyseq>
      </control>
      <control action="rate_temp_down_small">
        <keyseq lang="en_US" scancode="universal_key">Shift+F7</keyseq>
      </control>
      <control action="rate_temp_up">
        <keyseq lang="en_US" scancode="universal_key">F8</keyseq>
      </control>
      <control action="rate_temp_up_small">
        <keyseq lang="en_US" scancode="universal_key">Shift+F8</keyseq>
      </control>
      <control action="reloop_exit">
        <keyseq lang="en_US" scancode="10">9</keyseq>
      </control>
      <control action="reverse">
        <keyseq lang="en_US" scancode="36">Shift+j</keyseq>
      </control>
      <control action="vinylcontrol_cueing">
        <keyseq lang="en_US" scancode="22">Ctrl+Alt+U</keyseq>
      </control>
      <control action="vinylcontrol_mode">
        <keyseq lang="en_US" scancode="22">Ctrl+Shift+U</keyseq>
      </control>
    </group>
    <group name="[KeyboardShortcuts]">
      <control action="FileMenu_LoadDeck1">
        <keyseq>Ctrl+o</keyseq>
      </control>
      <control action="FileMenu_LoadDeck2">
        <keyseq>Ctrl+Shift+O</keyseq>
      </control>
      <control action="FileMenu_Quit">
        <keyseq>Ctrl+q</keyseq>
      </control>
      <control action="LibraryMenu_NewCrate">
        <keyseq>Ctrl+Shift+N</keyseq>
      </control>
      <control action="LibraryMenu_NewPlaylist">
        <keyseq>Ctrl+n</keyseq>
      </control>
      <control action="OptionsMenu_EnableLiveBroadcasting">
        <keyseq>Ctrl+l</keyseq>
      </control>
      <control action="OptionsMenu_EnableVinyl1">
        <keyseq>Ctrl+t</keyseq>
      </control>
      <control action="OptionsMenu_EnableVinyl2">
        <keyseq>Ctrl+y</keyseq>
      </control>
      <control action="OptionsMenu_EnableVinyl3">
        <keyseq>Ctrl+u</keyseq>
      </control>
      <control action="OptionsMenu_EnableVinyl4">
        <keyseq>Ctrl+i</keyseq>
      </control>
      <control action="OptionsMenu_RecordMix">
        <keyseq>Ctrl+r</keyseq>
      </control>
      <control action="OptionsMenu_ReloadSkin">
        <keyseq>Ctrl+Shift+R</keyseq>
      </control>
      <control action="ViewMenu_MaximizeLibrary">
        <keyseq>Space</keyseq>
      </control>
      <control action="ViewMenu_ShowCoverArt">
        <keyseq>Ctrl+6</keyseq>
      </control>
      <control action="ViewMenu_ShowEffects">
        <keyseq>Ctrl+5</keyseq>
      </control>
      <control action="ViewMenu_ShowMicrophone">
        <keyseq>Ctrl+2</keyseq>
      </control>
      <control action="ViewMenu_ShowPreviewDeck">
        <keyseq>Ctrl+4</keyseq>
      </control>
      <control action="ViewMenu_ShowSamplers">
        <keyseq>Ctrl+1</keyseq>
      </control>
      <control action="ViewMenu_ShowVinylControl">
        <keyseq>Ctrl+3</keyseq>
      </control>
    </group>
    <group name="[Master]">
      <control action="crossfader_down">
        <keyseq lang="en_US" scancode="34">g</keyseq>
      </control>
      <control action="crossfader_down_small">
        <keyseq lang="en_US" scancode="34">Shift+g</keyseq>
      </control>
      <control action="crossfader_up">
        <keyseq lang="en_US" scancode="35">h</keyseq>
      </control>
      <control action="crossfader_up_small">
        <keyseq lang="en_US" scancode="35">Shift+h</keyseq>
      </control>
    </group>
    <group name="[Microphone]">
      <control action="talkover">
        <keyseq lang="en_US" scancode="41">`</keyseq>
        <keyseq lang="cs_CZ" scancode="94">\</keyseq>
        <keyseq lang="da_DK" scancode="94">&lt;</keyseq>
        <keyseq lang="de_CH" scancode="94">&lt;</keyseq>
        <keyseq lang="de_DE" scancode="94">&lt;</keyseq>
        <keyseq lang="es_ES" scancode="94">&lt;</keyseq>
        <keyseq lang="fi_FI" scancode="94">&lt;</keyseq>
        <keyseq lang="fr_CH" scancode="94">&lt;</keyseq>
        <keyseq lang="fr_FR" scancode="94">&lt;</keyseq>
        <keyseq lang="it_IT" scancode="94">&lt;</keyseq>
        <keyseq lang="ru_RU" scancode="TODO: No scancode found in ru_RU for character: ']'">]</keyseq>
      </control>
    </group>
    <group name="[PreviewDeck1]">
      <control action="LoadSelectedTrackAndPlay">
        <keyseq lang="en_US" scancode="universal_key">Alt+Return</keyseq>
      </control>
      <control action="back">
        <keyseq lang="en_US" scancode="universal_key">Alt+Left</keyseq>
      </control>
      <control action="fwd">
        <keyseq lang="en_US" scancode="universal_key">Alt+Right</keyseq>
      </control>
      <control action="start_stop">
        <keyseq lang="en_US" scancode="universal_key">Return</keyseq>
      </control>
    </group>
  </controller>
</MixxxKeyboardPreset>
