			<PeakHoldTime>600</PeakHoldTime>
			<PeakFallTime>100</PeakFallTime>
			<PeakFallStep>1</PeakFallStep>
			<Connection>
			<ConfigKey>[Microphone],VuMeter</ConfigKey>
			</Connection>
		</VuMeter>
						
