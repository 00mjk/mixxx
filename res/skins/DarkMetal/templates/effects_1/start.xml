<!DOCTYPE template>

<Template>

	<WidgetGroup>
	<ObjectName>EffectsRacks</ObjectName>
	<MinimumSize>-1,115</MinimumSize>
	<SizePolicy>me,f</SizePolicy>
	<Layout>vertical</Layout> 
	<Children>
	
	<WidgetGroup>
	<ObjectName>EffectsOptions</ObjectName>
	<MinimumSize>-1,30</MinimumSize>
	<SizePolicy>me,f</SizePolicy>
	<Layout>horizontal</Layout> 
	<Children>		
	<!-- WIDGETGROUP: Toolbar -->
	<Template src="skin:templates/effects_1/effect_toolbar.xml">
	<SetVariable name="toolbarnum_a">1</SetVariable>
	<SetVariable name="toolbarnum_b">2</SetVariable>
	<SetVariable name="unit_a">1</SetVariable>
	<SetVariable name="unit_b">2</SetVariable>
	</Template>	
		
	</Children>
	</WidgetGroup>

	<WidgetGroup>
	<Layout>horizontal</Layout> 
	<Children>	
	
	<WidgetGroup> <!-- Design only: Visual Rack Left -->
	<ObjectName>Rack85</ObjectName>
	<MinimumSize>15,-1</MinimumSize>
	<SizePolicy>f,me</SizePolicy>
	<Children><!-- Design --></Children>
	</WidgetGroup>  
	
	<WidgetGroup>
	<MinimumSize>-1,-1</MinimumSize>
	<SizePolicy>me,me</SizePolicy>
	<Children><!-- Pusher --></Children>
	</WidgetGroup>

	<WidgetGroup>
	<ObjectName>EffectsRacksContents</ObjectName>	
	<MinimumSize>-1,85</MinimumSize>
	<SizePolicy>me,f</SizePolicy>
	<Layout>vertical</Layout> 
	<Children>

		<!-- WIDGETGROUP: The full row (2 units) -->		
		<WidgetGroup>
		<ObjectName>EffectsModulesRow1</ObjectName>
		<MinimumSize>-1,85</MinimumSize>
		<MaximumSize>-1,85</MaximumSize>
		<SizePolicy>me,f</SizePolicy> <!-- me,f -->
		<Layout>horizontal</Layout>
		<Children>

		<Template src="skin:templates/effects_1/effect_module.xml"><SetVariable name="unit">1</SetVariable></Template>		
		<Template src="skin:templates/effects_1/effect_module.xml"><SetVariable name="unit">2</SetVariable></Template>
		
		</Children>
		<Connection>
		<ConfigKey>[EffectsModulesRow1],show</ConfigKey>
		<BindProperty>visible</BindProperty>
		</Connection>
		</WidgetGroup>
	
	</Children>
	</WidgetGroup>
	
	<WidgetGroup>
	<MinimumSize>-1,-1</MinimumSize>
	<SizePolicy>me,me</SizePolicy>
	<Children><!-- Pusher --></Children>
	</WidgetGroup> 
	
	<WidgetGroup> <!-- Design only: Visual Rack Right -->
	<ObjectName>Rack85</ObjectName>
	<MinimumSize>15,-1</MinimumSize>
	<SizePolicy>f,me</SizePolicy>
	<Children><!-- Design --></Children>
	</WidgetGroup>
	
	</Children>
	</WidgetGroup>
	
	
	</Children>
	<!-- Show/Hide this Group: -->
	<Connection>
	<ConfigKey>[EffectsRack1],show</ConfigKey>
	<BindProperty>visible</BindProperty>
	</Connection>
	</WidgetGroup>

</Template>