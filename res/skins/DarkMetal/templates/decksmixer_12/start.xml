<!DOCTYPE template>

<Template>	
	
	<!-- WIDGETGROUP: -->	
	<WidgetGroup>
	<ObjectName>DecksAndMixerRack1</ObjectName>
	<Pos>0,0</Pos>
	<MinimumSize>1,300</MinimumSize>
	<SizePolicy>me,f</SizePolicy>
	<Layout>horizontal</Layout>
	<Children>	
	<!-- WIDGETGROUP: Deck -->			  
    <Template src="skin:templates/decksmixer_12/deck_left.xml">
	<SetVariable name="audiochannel">1</SetVariable>
	<SetVariable name="decktohide">2</SetVariable>
	</Template>
	<!-- WIDGETGROUP: Mixer Panel -->
	<Template src="skin:templates/decksmixer_12/mixer.xml">
	<SetVariable name="audiochannel_a">1</SetVariable>
	<SetVariable name="audiochannel_b">2</SetVariable>	
	</Template>	
	<!-- WIDGETGROUP: Deck -->	
	<Template src="skin:templates/decksmixer_12/deck_right.xml">
	<SetVariable name="audiochannel">2</SetVariable>
	<SetVariable name="decktohide">1</SetVariable>
	</Template>
	</Children>	
	<Connection>
	<ConfigKey>[DarkMetal],decks_and_mixer_rack1_show</ConfigKey>
	<BindProperty>visible</BindProperty>
	</Connection>
	</WidgetGroup>
	
	<WidgetGroup><!-- Design only: For creating an horizontal long line -->
	<ObjectName>HorizontalLineDarker</ObjectName>
	<MinimumSize>10,1</MinimumSize>
	<SizePolicy>me,f</SizePolicy>
	<Layout>horizontal</Layout>				
	<Children></Children>
	</WidgetGroup>
	
</Template>