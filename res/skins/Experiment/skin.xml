<!DOCTYPE skin>
<skin>
	<manifest>
    <title>Experiment</title>
    <author>jmigual</author>
    <version>0.0</version>
    <description>An experiment</description>
    <language>en</language>
    <license>Creative Commons Attribution, Share-Alike 3.0 Unported</license>
  </manifest>

  <ObjectName>Mixxx</ObjectName>

  <MinimumSize>1280,700</MinimumSize>
  <SizePolicy>me,me</SizePolicy>
  <Layout>vertical</Layout>

  <Style src="skin:style.qss"/>

  <Children>
  	<Splitter>
      <Orientation>horizontal</Orientation>
      <MinimumSize>40,20</MinimumSize>
      <SizePolicy>me,me</SizePolicy>
      <SplitSizes>4,4,2,2</SplitSizes>

        <Children>
          <LibrarySidebar>
            <MaximumSize>100, -1</MaximumSize>
          </LibrarySidebar>
          <LibrarySidebarExpanded>
            <MinimumSize>100,100</MinimumSize>
          </LibrarySidebarExpanded>

          <!-- For Track table 1 -->
          <WidgetGroup>
            <Layout>vertical</Layout>
            <Children>
              <SearchBox>
                <MinimumSize>100,100</MinimumSize>
                <MaximumSize>-1, 10</MaximumSize>
                <Id>1</Id>
              </SearchBox>
              <Library>
                <MinimumSize>100,100</MinimumSize>
                <Id>1</Id>
              </Library>
            </Children>
          </WidgetGroup>
       
          <!-- For Track table 2 -->
          <WidgetGroup>
            <Layout>vertical</Layout>
            <Children>
              <SearchBox>
                <MinimumSize>100,100</MinimumSize>
                <MaximumSize>-1, 10</MaximumSize>
                <Id>2</Id>
              </SearchBox>
              <Library>
                <MinimumSize>100,100</MinimumSize>
                <Id>2</Id>
              </Library>
            </Children>
          </WidgetGroup>
        </Children>
    </Splitter>
  </Children>
</skin>