#!/usr/bin/perl -w

open(F,"skin.xml");
open(OF,">newskin.xml");

while ($_ = <F>) 
{
  if (/<Pos>/)
  {
     ($x, $y) = split(',', $_);
     ($rest, $x) = split('<Pos>', $x);
     ($y, $rest) = split('</Pos>', $y);
     $x = $x * 0.75;
     $y = $y * 0.75;
     printf "<Pos>%0.f,%0.f</Pos>\n", $x, $y;
     printf OF "  <Pos>%0.f,%0.f</Pos>\n", $x, $y;
  }
  elsif (/<Size>/)
  {
     ($x, $y) = split(',', $_);
     ($rest, $x) = split('<Size>', $x);
     ($y, $rest) = split('</Size>', $y);
     $x = $x * 0.75;
     $y = $y * 0.75;

     printf OF "  <Size>%0.f,%0.f</Size>\n", $x, $y;
  }
  else
  {
        print OF "$_";
  }
}
close(F);
close(OF);
