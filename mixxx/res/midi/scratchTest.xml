<?xml version="1.0" encoding="utf-8"?>
<MixxxMIDIPreset schemaVersion="1" mixxxVersion="1.6.2+">
    <info>
        <name>Scratch test</name>
        <author>Sean M. Pappalardo</author>
        <description>This mapping tests scratching with a slider and a scratch enable button. Requires scripting.</description>
    </info>
    <controller id="Scratchmaster" port="Port">
        <scriptfiles>
            <file filename="scratchTest.js" functionprefix="scratchTest"/>
        </scriptfiles>
        
        <controls>
            <control>    <!--    S4 Absolute    -->
                <group>[Master]</group>
                <key>scratchTest.scratchSlider</key>
                <miditype>Ctrl</miditype>
                <midino>0x01</midino>
                <midichan>0x01</midichan>
                <options>
                    <Script-Binding/>
                </options>
            </control>
            <control> <!--       S4 touch    -->
                <group>[Master]</group>
                <key>scratchTest.scratchEnable</key>
                <miditype>Key</miditype>
                <midino>0x01</midino>
                <midichan>0x01</midichan>
<!--                 <controltype>button</controltype> -->
                <options>
                    <Script-Binding/>
                </options>
            </control>
        </controls>
        
        <outputs>
        </outputs>
        
    </controller>
</MixxxMIDIPreset> 